
@model IEnumerable<SSMWeb.Models.Product>
@{
    ViewBag.Title = "Products";
}

<h2>List of Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="richtable" class="display" >
  <thead>
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aliases)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SKU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCategory.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductColor.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductSize.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityUnit.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.COG.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FulfilmentSKU.SKU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDiscontinued)
        </th>
    </tr>
  </thead>
                
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td nowrap>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "edit" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "details" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "delete" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aliases)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SKU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCategory.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductColor.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductSize.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityUnit.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.COG.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FulfilmentSKU.SKU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDiscontinued)
                </td>
            </tr>
        }
</tbody>

</table>
