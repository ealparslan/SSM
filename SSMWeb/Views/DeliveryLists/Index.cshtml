@model IEnumerable<DataLayerPrimitives.DeliveryList>

@{
    ViewBag.Title = "Delivery Items";
}

<h2>Delivery Items</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="richtable" class="display">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Delivery.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoxQuantiy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartCapOfBox)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td nowrap>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "edit" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "details" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "delete" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Delivery.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BoxQuantiy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartCapOfBox)
                </td>
            </tr>
        }
    </tbody>

</table>
