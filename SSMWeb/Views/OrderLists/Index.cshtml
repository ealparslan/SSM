@model IEnumerable<SSMWeb.Models.OrderList>

@{
    ViewBag.Title = "Order Items";
}

<h2>Order Items</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="richtable" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Order.OrderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoxId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoldQty)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td nowrap>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "edit" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "details" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "delete" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.OrderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BoxId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoldQty)
                </td>
            </tr>
        }
    </tbody>
</table>
