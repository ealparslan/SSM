<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Stock-Shipment Management Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datatables")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/datatables")


    <link rel="stylesheet" href="http://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

    <script type="text/javascript">
        $(document).ready(function () {
            $("#DateBox1").datepicker({
                changeMonth: true,
                changeYear: true
            });
        });
    </script>

    <script type="text/javascript">
    $(document).ready(function () {
        $("#DateBox2").datepicker({
            changeMonth: true,
            changeYear: true
        });
    });
    </script>



    <script type="text/javascript" language="javascript">
        /* Table initialization */
        $(document).ready(function() {
            var table = $('#richtable').DataTable({
                "dom": 'Rlfrtip',
                stateSave: true,
                colReorder: {
                    realtime: true
                }
            });
            var colvis = new $.fn.dataTable.ColVis(table);
            $(colvis.button()).insertAfter('div.info');
        });

    </script>



    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Stock-Shipment Management", "Index", "Shipments", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Shipments")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Product Definitions<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Products", "Index", "Products")</li>
                                <li>@Html.ActionLink("Product Categories", "Index", "ProductCategories")</li>
                                <li>@Html.ActionLink("Product Colors", "Index", "ProductColors")</li>
                                <li>@Html.ActionLink("Product Sizes", "Index", "ProductSizes")</li>
                                <li>@Html.ActionLink("Quantity Units", "Index", "QuantityUnits")</li>
                                <li>@Html.ActionLink("COGs", "Index", "COGs")</li>
                                <li>@Html.ActionLink("Fulfilment SKUs", "Index", "FulfilmentSKUs")</li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Shipment Actions<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Shipments", "Index", "Shipments")</li>
                                <li>@Html.ActionLink("Shipment Items", "Index", "ShipmentLists")</li>
                                <li>@Html.ActionLink("Deliveries", "Index", "Deliveries")</li>
                                <li>@Html.ActionLink("Delivery Items", "Index", "DeliveryLists")</li>
                            </ul>
                        </li>


                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Order Management<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Locations", "Index", "Locations")</li>
                                <li>@Html.ActionLink("Boxes", "Index", "Boxes")</li>
                                <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                            </ul>
                        </li>

                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - X Application</p>
            </footer>
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/datatables")
    @Scripts.Render("~/bundles/datetime")
    @RenderSection("scripts", required: false)
    @RenderSection("myScripts", false);
    </body>
    </html>
