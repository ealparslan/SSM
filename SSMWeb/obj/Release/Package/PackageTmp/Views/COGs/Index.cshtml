@model IEnumerable<SSMWeb.Models.COG>

@{
    ViewBag.Title = "COGs";
}

<h2>COGs</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="richtable" class="display">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SetPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.SKU)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td nowrap>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "edit" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "details" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "delete" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SetPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.SKU)
                </td>
            </tr>
        }
    </tbody>
</table>
