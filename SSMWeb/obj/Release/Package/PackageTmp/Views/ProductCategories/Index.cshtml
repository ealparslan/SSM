@model IEnumerable<SSMWeb.Models.ProductCategory>

@{
    ViewBag.Title = "Product Categories";
}

<h2>Product Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="richtable" class="display">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aliases)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEnabled)
            </th>
        </tr>
     </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td nowrap>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "edit" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "details" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "delete" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aliases)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEnabled)
                </td>
            </tr>
        }
    </tbody>
</table>
