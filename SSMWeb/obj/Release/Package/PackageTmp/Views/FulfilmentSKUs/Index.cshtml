@model IEnumerable<SSMWeb.Models.FulfilmentSKU>

@{
    ViewBag.Title = "Fulfilment SKUs";
}

<h2>Fulfilment SKUs</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="richtable" class="display">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.SKU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SCName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ASIN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDiscontinued)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td nowrap>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "edit" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "details" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "delete" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SKU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SCName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ASIN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDiscontinued)
                </td>
            </tr>
        }
</tbody>
</table>
